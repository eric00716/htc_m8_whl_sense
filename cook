#!/bin/bash
#This is a spin off script related to Chadouming's build and package script for Android.
#Created by Evolutionmods & MysteryEmotionz

#Config Section below is where you set your paths-

#Kernel path
kernelDir1="/home/zaichron-lin/AndroidDev/m8whl_kernel" #( Example /home/user/path )
kernelDir2="Path to kernel 2" #( Example /home/user/path )
kernelDir3="Path to kernel 3" #( Example /home/user/path )
#Toolchain path
toolchainDir="/home/zaichron-lin/AndroidDev/AAtoolchains/linaro_toolchains_2014/arm-cortex_a15-linux-gnueabihf-linaro_4.9.1-2014.05" #( Example /home/user/path )
#Path where you would like the kernel to be outputed
exportDir="/home/zaichron-lin/Desktop/Copy/AndroidDev/Kernz/m8whl/out" #( Example /home/user/Desktop )
#Change default to what ever you like
kernel1name="MassStashedX"
kernel2name="Default-2"
kernel3name="Default-3"
#Do not edit
now=$(date +"%Y-%m-%d")
threads=$(expr 2 + $(grep processor /proc/cpuinfo | wc -l))
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# End of Config Section-

clear
echo "                                Kernel-Builder                                 "
echo "                                      By                                       "
echo "                    Chadouming, Evolutionmods & MysteryEmotionz                "
echo "-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo " Welcome back" $USER"                      $(date)"
echo "-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
echo 
echo
echo " Please choose a muthafukin kernel "
echo
OPTIONS="$kernel1name $kernel2name $kernel3name"
select opt in $OPTIONS; do
    if [ "$opt" = "$kernel1name" ]; then
     clear
     echo "$kernel1name selected"
     sleep 2
     kernelName="$kernel1name"
     cd $kernelDir1
     break
    elif [ "$opt" = "$kernel2name" ]; then
     clear
     echo "$kernel2name selected"
     sleep 2
     kernelName="$kernel2name"
     cd $kernelDir2
     break
    elif [ "$opt" = "$kernel3name" ]; then
     clear
     echo "$kernel3name selected"
     sleep 2
     kernelName="$kernel3name"
     cd $kernelDir3
     break
    else
     clear
     ./build
    fi
done
#xxx= Your config name
make ARCH=arm m8whl_defconfig
#Keep thangs sqeaky
make clean
#Change arm-eabi- to what you current toolchain uses default is gcc4.6 & gcc4.7 toolchains
make ARCH=arm CROSS_COMPILE=$toolchainDir/bin/arm-cortex_a15-linux-gnueabihf- -j$threads

echo
echo
echo " Done compiling your kernel bitch "

echo
echo
echo " Compiling dt.img brah "
make m8whl_defconfig && make clean && make ARCH=arm CROSS_COMPILE=/home/zaichron-lin/AndroidDev/AAtoolchains/linaro_toolchains_2014/arm-cortex_a15-linux-gnueabihf-linaro_4.9.1-2014.05/bin/arm-cortex_a15-linux-gnueabihf- && ./dtb -o arch/arm/boot/dt.img -s 2048 -d "htc,project-id = <" -p ./scripts/dtc/ ./arch/arm/boot/

echo
echo
echo " Now the kernel is going to get packaged in a flashable zip yo"

echo
echo
#mkdir zip2
#mkdir zip2/kernel
#mkdir zip2/modules
#cp arch/arm/boot/zImage zip2/kernel/
cp arch/arm/boot/zImage ~/AndroidDev/AAmkbootimg_tools/venom
#cp arch/arm/boot/dt.img zip2/kernel/
cp arch/arm/boot/dt.img ~/AndroidDev/AAmkbootimg_tools/venom
find -iname *.ko | xargs cp -t ~/Desktop/Copy/AndroidDev/Kernz/m8whl/MassStashedX_v17.0.3/system/lib/modules
cd ~/AndroidDev/AAmkbootimg_tools
./mkboot venom boot.img
cp boot.img ~/Desktop/Copy/AndroidDev/Kernz/m8whl/MassStashedX_v17.0.3/boot
cd ~/Desktop/Copy/AndroidDev/Kernz/m8whl/MassStashedX_v17.0.3
zip -r $kernelName-$now *
mv $kernelName-$now.zip $exportDir
#cd ..
cd ~/AndroidDev/m8whl_kernel
#rm -r zip2
cd $DIR
echo
echo
echo " Check $exportDir for $kernelName-$now.zip and repeat "
sleep 10
./build
